<h1>Listing all Todos</h1>

<p>
    <%= link_to "Create a Todo", new_todo_path %>
</p>

<table>
    <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    </tr>
    <% @todos.each do |item| %>
        <tr>
            <td><%= item.name %></td> 
            <td><%= item.description %></td>
            <td><%= link_to " Edit ", edit_todo_path(item) %></td>
            <td><%= link_to " Show ", todo_path(item) %></td>
        </tr>
    <% end %>
</table>